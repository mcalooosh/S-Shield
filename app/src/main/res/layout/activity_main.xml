<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hackathon.s_shield.MainActivity"
    android:background="#fff">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/logoIV"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo"
        android:onClick="onButtonClick" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/logoIV">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/logoIV"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Report"
                android:id="@+id/reportBtn"
                android:background="@drawable/buttonbg"
                android:textColor="#fff"
                android:textSize="21sp"
                android:drawableTop="@android:drawable/ic_menu_send"
                android:onClick="onButtonClick" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Counseling"
                android:id="@+id/counselingBtn"
                android:background="@drawable/buttonbg"
                android:textColor="#fff"
                android:textSize="21sp"
                android:layout_marginTop="8dp"
                android:drawableTop="@android:drawable/ic_menu_myplaces"
                android:onClick="onButtonClick" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Review case"
                android:id="@+id/reviewCaseBtn"
                android:background="@drawable/buttonbg"
                android:textColor="#fff"
                android:textSize="21sp"
                android:drawableTop="@android:drawable/ic_menu_view"

                android:layout_marginTop="8dp"
                android:onClick="onButtonClick" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="All rights reserved | S-Shield 2017 TM"
        android:id="@+id/textView3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="14sp" />
</RelativeLayout>
